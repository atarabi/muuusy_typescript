{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "newLineCharacter": "\r\n",
    "convertTabsToSpaces": true,
    "insertSpaceAfterCommaDelimiter": true,
    "insertSpaceAfterSemicolonInForStatements": true,
    "insertSpaceBeforeAndAfterBinaryOperators": true,
    "insertSpaceAfterKeywordsInControlFlowStatements": true,
    "insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
    "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "placeOpenBraceOnNewLineForFunctions": true,
    "placeOpenBraceOnNewLineForControlBlocks": true
  },
  "compileOnSave": false,
  "filesGlob": [
    "./**/*.ts",
    "!./node_modules/**/*.ts",
    "!./bower_components/**/*.ts",
    "!./typings/**/*.ts"
  ],
  "files": [
    "./assets/pc/ts/_api/mock.ts",
    "./assets/pc/ts/_module/fn/Api.ts",
    "./assets/pc/ts/_module/fn/applyMixins.ts",
    "./assets/pc/ts/_module/fn/checkEnterKeypress.ts",
    "./assets/pc/ts/_module/models/abstruct/BaseModel.ts",
    "./assets/pc/ts/_module/models/AlbumModel.ts",
    "./assets/pc/ts/_module/models/AppStatusModel.ts",
    "./assets/pc/ts/_module/models/interface/IAlbum.ts",
    "./assets/pc/ts/_module/models/interface/IAppStatus.ts",
    "./assets/pc/ts/_module/models/interface/IStatus.ts",
    "./assets/pc/ts/_module/models/StatusModel.ts",
    "./assets/pc/ts/_module/views/abstruct/BaseModalView.ts",
    "./assets/pc/ts/_module/views/abstruct/BaseView.ts",
    "./assets/pc/ts/_module/views/AlbumDetailModalView.ts",
    "./assets/pc/ts/_module/views/AlbumListView.ts",
    "./assets/pc/ts/_module/views/HeaderView.ts",
    "./assets/pc/ts/_module/views/interface/IAlbumDetailModalView.ts",
    "./assets/pc/ts/_module/views/interface/IAlbumListView.ts",
    "./assets/pc/ts/_module/views/interface/IBaseView.ts",
    "./assets/pc/ts/_module/views/interface/IPageView.ts",
    "./assets/pc/ts/_module/views/LoaderView.ts",
    "./assets/pc/ts/_module/views/PageView.ts",
    "./assets/pc/ts/home.ts",
    "./assets/pc/ts/index.ts",
    "./lib.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
